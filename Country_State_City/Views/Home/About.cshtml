@model Country_State_City.Models.CountryViewModel

    <head>

         
        <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
        <link href="~/Content/jquery.dataTables.min.css" rel="stylesheet" /> 
        <script src="~/Scripts/jquery-3.4.1.min.js"></script> 
        <script src="~/Scripts/bootstrap.min.js"></script>
        <script src="~/Scripts/jquery.dataTables.min.js"></script> 
         
    </head>

<!DOCTYPE html>
<html>
<head>
    
</head>
<body>
    <div class="container">
        <div class="form-group">
            <input type="text" class="form-control input-md" id="myInput" onkeyup="myFunction()" placeholder="Search for names.." title="Type in a name">
        </div> 
        <table class="table table-striped table-bordered" cellspacing="0" id="myTable">
            <thead>
                <tr>
                    <th>Country</th>
                    <th>Region</th>
                    <th>Sub Region</th>
                </tr>
                </thead>
                @foreach (var item in Model.countriesList)
                {
                    <tr>
                        <td> <a href="@Url.Action("DetailsByCountryName", "Home",new { countryName = item.name})">@item.name</a> </td>
                        <td> <a href="@Url.Action("DetailsByRegionName", "Home",new { regionName = item.region})">@item.region</a> </td>
                        <td> @item.subregion </td>
                    </tr>
                }
        </table>


        @{
            ViewBag.Title = "About";
        }
        <h2>@ViewBag.Title.</h2>
        <h3>@ViewBag.Message</h3>
    </div>
    
</body>
</html>







<script type="text/javascript"> 
    function myFunction() { 
        var input, filter, table, tr, td, i, txtValue;
        input = document.getElementById("myInput");
        filter = input.value.toUpperCase();
        table = document.getElementById("myTable");
        tr = table.getElementsByTagName("tr");
       
        for (i = 0; i < tr.length; i++) {
            td = tr[i].getElementsByTagName("td")[0];
            if (td) {
                txtValue = td.textContent || td.innerText;
                if (txtValue.toUpperCase().indexOf(filter) > -1) {
                    tr[i].style.display = "";
                } else {
                    tr[i].style.display = "none";
                }
            }
        }
    };
</script>