@model Country_State_City.Models.CountryViewModel

@{
    ViewBag.Title = " Country Details";
}


<div class="container space-20">
    <div class="row">
        <div class="col-sm-9">
            <div class="col-sm-12 text-center space-20">
                <h2>@Request.QueryString["regionName"] Details</h2>
            </div>
        </div>
    </div>

    <div class="space-20">
        <button class="btn btn-primary pull-right" onclick="location.href='@Url.Action("About", "Home")'"> <span class="glyphicon glyphicon-arrow-left"></span>&nbsp;&nbsp; Back</button>
    </div>

    @foreach (var item in Model.countryDetails)
    {
        if (@Request.QueryString["countryName"] != null)
        {

            <div class="row">
                <div class="col-sm-12">
                    <div class="col-sm-12 text-center space-20">
                        <h2>@item.name Details</h2>
                    </div>
                </div>
                <div class="col-sm-12 col-md-6">
                    <div class="col-xs-4 p-10">Name</div> <div class="col-xs-6 p-10">:&nbsp; @item.name</div>
                    <div class="col-xs-4 p-10">Population</div> <div class="col-xs-6 p-10">
                        :&nbsp;
                        @item.population
                    </div>
                    <div class="col-xs-4 p-10">Capital</div> <div class="col-xs-6 p-10">
                        : &nbsp;   @item.capital
                    </div>
                </div>
                <div class="col-sm-12 col-md-4">
                    <div style="min-width:50%;min-height:50%">
                        <img class="img-responsive img-thumbnail center-block" src="@item.flag">
                    </div>
                </div>
            </div>
        }

        if (@Request.QueryString["regionName"] != null)
        {

            <div class="row">
                <div class=" col-md-9">
                    <ul class="list-group">
                        <li class="list-group-item"><h4>@item.name</h4> </li>
                        <li class="list-group-item">
                            <div class="row">
                                <div class="col-sm-12 col-md-4">
                                    <img class="img-responsive img-thumbnail center-block" src="@item.flag">
                                </div>

                                <div class="col-sm-12 col-md-6">
                                    <div class="col-xs-4  p-10">Name</div> <div class="col-xs-6 p-10">:&nbsp; @item.name</div>
                                    <div class="col-xs-4 p-10">Population</div> <div class="col-xs-6 p-10">
                                        :&nbsp;
                                        @item.population
                                    </div>
                                    <div class="col-xs-4 p-10">Capital</div> <div class="col-xs-6 p-10">
                                        :&nbsp;    @item.capital
                                    </div>
                                </div>
                            </div>
                        </li>

                    </ul>
                </div>
            </div>
        }
    }
</div>
